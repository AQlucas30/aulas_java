package principal;

import java.util.Scanner;

public class ExercicioQuatro {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner leia = new Scanner (System.in);
		
		String horasTrabalhada ;
		String  hora ;
		double media ;
		String diasTrabalhado ;
		
		System.out.println("Quanto o funcionário ganha por hora?");
		hora = leia.next();
		
		System.out.println("Quantas horas de trabalho o funcionário trabalha?");
		horasTrabalhada = leia.next();
		
		System.out.println("Quantos dias o funcionário Trabalhou?: ");
		diasTrabalhado = leia.next();
		
		System.out.println("Quanto ele ganhou no mês atual");
		media =  ((hora * horasTrabalhada)* diastrabalhado);
		
		
		leia.close();
		
		
		

	}

}
