		double salario;
		String horasTrabalhada;
		String hora;
		double media;
		
		System.out.println("Quanto o Gestor de TI ganha por hora?");
		hora = leia.next();
		System.out.println("Quantas horas de trabalho o Gestor trabalha?");
		horasTrabalhada = leia.nextInd();
